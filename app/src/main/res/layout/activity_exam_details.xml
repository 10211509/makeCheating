<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nobugs.team.cheating.ui.activity.ExamDetailsActivity">

    <include
        android:id="@+id/tool_bar_main"
        layout="@layout/layout_common_tool_bar" />

    <include
        android:id="@+id/layout_exam_paper_header"
        layout="@layout/layout_exam_paper_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar_main" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="第{x}题"
        android:id="@+id/tv_question_index"
        android:layout_below="@+id/layout_exam_paper_header"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_question_index">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="试题部分:"
            android:id="@+id/tv_section_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="第{x}部分"
            android:id="@+id/tv_section_value"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv_section_title"
            android:layout_toEndOf="@+id/tv_section_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="试题题目:"
            android:id="@+id/tv_question_title"
            android:layout_below="@+id/tv_section_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="略"
            android:id="@+id/tv_question_value"
            android:layout_below="@+id/tv_section_title"
            android:layout_toRightOf="@+id/tv_section_title"
            android:layout_toEndOf="@+id/tv_section_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="试题类型:"
            android:id="@+id/tv_type_title"
            android:layout_below="@+id/tv_question_title"
            android:layout_toLeftOf="@+id/tv_question_value"
            android:layout_toStartOf="@+id/tv_question_value" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="选择题"
            android:id="@+id/tv_type_value"
            android:layout_alignTop="@+id/tv_type_title"
            android:layout_alignLeft="@+id/tv_question_value"
            android:layout_alignStart="@+id/tv_question_value" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="试题答案:"
            android:id="@+id/tv_answer_title"
            android:layout_below="@+id/tv_type_title"
            android:layout_toLeftOf="@+id/tv_type_value"
            android:layout_toStartOf="@+id/tv_type_value" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="C"
            android:id="@+id/tv_answer_value"
            android:layout_below="@+id/tv_type_value"
            android:layout_alignLeft="@+id/tv_type_value"
            android:layout_alignStart="@+id/tv_type_value" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上一题"
            android:id="@+id/btn_pre_question" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目录"
            android:id="@+id/btn_question_list" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一题"
            android:id="@+id/btn_next_question" />
    </LinearLayout>

</RelativeLayout>
