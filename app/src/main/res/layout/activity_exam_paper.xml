<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nobugs.team.cheating.ui.activity.ExamPaperActivity">

    <include
        android:id="@+id/tool_bar_main"
        layout="@layout/layout_common_tool_bar" />

    <include
        android:id="@+id/layout_exam_paper_header"
        layout="@layout/layout_exam_paper_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar_main" />

    <TextView
        android:id="@+id/tv_timu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layout_exam_paper_header"
        android:text="考试题目"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <se.emilsjolander.stickylistheaders.StickyListHeadersListView
        android:id="@+id/list_test_questions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_timu" />
</RelativeLayout>
